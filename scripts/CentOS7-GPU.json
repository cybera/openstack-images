{
  "variables": {
    "source_image": "",
    "default_network": ""
  },
  "builders": [{
    "type": "openstack",
    "source_image": "{{ user `source_image` }}",
    "ssh_username": "centos",
    "image_name": "PackerCentOS7",
    "flavor": "g1.large",
    "networks": "{{ user `default_network` }}",
    "ssh_interface": "default",
    "ssh_ip_version": "6",
    "ssh_pty": "true"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": ["sleep 5"]
  },
  {
    "type": "file",
    "source": "../packer_files/enableAutoUpdate.sh",
    "destination": "/home/centos/enableAutoUpdate"
  },
  {
    "type": "file",
    "source": "../packer_files/installOpenStackTools.sh",
    "destination": "/home/centos/installOpenStackTools"
  },
  {
    "type": "file",
    "source": "../packer_files/disableFirewall.sh",
    "destination": "/home/centos/disableFirewall"
  },
  {
    "type": "file",
    "source": "../packer_files/motd.redhat",
    "destination": "/home/centos/motd"
  },
  {
    "type": "file",
    "source": "../packer_files/dhclientpatch",
    "destination": "/home/centos/dhclientpatch"
  },
  {
    "type": "file",
    "source": "../packer_files/fixDHClient.sh",
    "destination": "/home/centos/fixDHClientPatch"
  },
  {
    "type": "file",
    "source": "../packer_files/local-module.te",
    "destination": "/home/centos/local-module.te"
  },
  {
    "type": "file",
    "source": "../packer_files/local-module.pp",
    "destination": "/home/centos/local-module.pp"
  },
  {
    "type": "shell",
    "script": "../packer_files/RedHatBootstrap.sh",
    "pause_before": "1s"
  },
  {
    "type": "shell",
    "script": "../packer_files/fixDHClient.sh",
    "pause_before": "1s"
  },
  {
    "type": "shell",
    "script": "../packer_files/RedHatGPU.sh",
    "pause_before": "1s"
  }]
}

