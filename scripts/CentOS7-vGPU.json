    "networks": "bad95ca2-d3ad-418a-b8c9-1f29346e59d9",
    "reuse_ips": true
  }],
  "provisioners": [{
    "type": "shell",
    "inline": ["sleep 5"]
  },
  {
    "type": "shell",
    "script": "../packer_files/RedHatvGPU.sh",
    "pause_before": "1s",
    "expect_disconnect": true
  }]
}

