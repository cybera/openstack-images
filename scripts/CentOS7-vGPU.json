{
  "variables": {
    "source_image": ""
  },
  "builders": [{
    "type": "openstack",
    "source_image": "{{ user `source_image` }}",
    "ssh_username": "centos",
    "openstack_provider": "nova",
    "image_name": "PackerCentOS7",
    "flavor": "g1.large.auto-destruct",
    "ssh_pty": "true"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": ["sleep 5"]
  },
  {
    "type": "shell",
    "script": "../packer_files/RedHatvGPU.sh",
    "pause_before": "1s"
  }]
}

